<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @listing.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @listing.name %></h3>
    <p><%= number_to_currency(@listing.price) %></p>
    <p><%= @listing.description %></p>
    <br>
    <% if current_user != @listing.user %>
    <div class="center">
      <!-- %= link_to "Add To Cart", action: "add_to_cart", id: params[:id] %> -->
      <!-- %= link_to "Add To Cart", controller: "cart", action: "add", id: params[:id] %> -->
      <%= button_to "Add To Cart", {controller: "carts", action: "add", id: @listing}, class: 'btn btn-info' %> <br>
      <%= link_to "Buy It Now", new_listing_order_path(@listing), class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>

<% if current_user == @listing.user %>
  <%= link_to 'Edit', edit_listing_path(@listing), class: 'btn btn-link' %> |
<% end %>
<%= link_to 'Back', listings_path, class: 'btn btn-link' %>
